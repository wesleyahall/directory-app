@require('../../assets/styles/vars.styl')
@require('../../assets/styles/font-awesome.css')

.footer-nav
  position fixed
  height $footer-nav-height
  line-height $footer-nav-height
  width 100vw
  bottom 0
  left 0

  &__link
    font-family Lato
    font-size 14px
    font-weight bold

    &__item
      background-color $tan;
      border-top 3px solid $light-brown;
      box-sizing border-box;
      color $green;
      display inline-block;
      position relative;
      text-align center;
      width 50%;

      & i
        padding-right 10px

    &--active &__item
      border-top 3px solid $brown
      color $brown

      &::before
        content '\f0d7'
        font-family 'FontAwesome'
        font-size 20px
        height 20px
        left 50%
        line-height 20px
        margin-top -8px
        position absolute
        top 0
