<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mediafusion.directory" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>clearview-directory-app</name>
    <description>
      Find Doctors, Hospitals, and Pharmacies
    </description>
    <author email="webmaster@fusiononline.com" href="http://fusiononline.com">
      Media Fusion, Inc.
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <access origin="tel:*" launch-external="no" />
    <access origin="telprompt:*" launch-external="no" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="telprompt:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
</widget>
